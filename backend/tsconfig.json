{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true, // Esta linha é crucial para os decoradores funcionarem
    "emitDecoratorMetadata": true, // Essa também é importante
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
